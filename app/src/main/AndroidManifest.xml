<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.budi.setiawan.githubusersubmission3">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_cat_blue"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_cat_blue"
        android:supportsRtl="true"
        android:theme="@style/Theme.GithubUserSubmission3">
        <activity
            android:name=".ui.setting.SettingActivity"
            android:exported="false"
            android:parentActivityName=".ui.main.MainActivity"/>
        <activity
            android:name=".ui.favorite.FavoriteActivity"
            android:exported="false"
            android:parentActivityName=".ui.main.MainActivity"/>
        <activity
            android:name=".ui.detail.DetailUserActivity"
            android:exported="false"
            android:parentActivityName=".ui.main.MainActivity"/>
        <activity
            android:name=".ui.splash.SplashScreen"
            android:exported="true"
            android:theme="@style/SplashScreenTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.main.MainActivity"
            android:exported="true" />
    </application>

</manifest>